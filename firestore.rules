rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read for recommendations, but restrict writes.
    // In a real app, you'd make this more secure, e.g., only authenticated users.
    match /dssRecommendations/{trainId} {
      allow read: if true;
      // Allow write only from your backend services (e.g., Cloud Functions).
      // This rule is a placeholder; you'd typically use service account auth.
      allow write: if false; 
    }

    // Allow authenticated users to log overrides.
    match /dssOverrides/{overrideId} {
      allow read, write: if request.auth != null;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
